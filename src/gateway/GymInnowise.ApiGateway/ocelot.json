{
  "GlobalConfiguration": {
    "BaseUrl": "http://gyminnowise.gateway.api"

  },
  "Routes": [
    //auth gateways
    {
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/refresh",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/refresh",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/revoke",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/revoke",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    //Account gateways
    {
      "UpstreamPathTemplate": "/gateway/accounts",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/accounts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/accounts/{id}",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/api/accounts/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/accounts/{id}/roles",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/api/accounts/{id}/roles",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    },
    //email gateways
    {
      "UpstreamPathTemplate": "/gateway/email/send",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/email/send",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.emailservice.api",
          "Port": 5004
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/email/send/template",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/email/send/template",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.emailservice.api",
          "Port": 5004
        }
      ]
    },
    //verification gateways
    {
      "UpstreamPathTemplate": "/gateway/verification/{verificationToken}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/verification/{verificationToken}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "gyminnowise.authorization.api",
          "Port": 5000
        }
      ]
    }
  ]
}