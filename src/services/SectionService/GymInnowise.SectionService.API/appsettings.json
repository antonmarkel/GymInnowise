{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "SecretKey": "GymGymVeryBestGym12345SecretKeyNoSwearingbtw",
    "Issuer": "GymIssuer",
    "Audience": "GymAudience",
    "ExpiryInMinutes": 60,
    "RefreshExpiryInMinutes": 10080
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=GymInnowiseSectionService;Username=postgres;Password=MADL"
  },
  "CacheSettings": {
    "AbsoluteExpirationInMinutes": 15,
    "NotUsedExpirationInMinutes": 10
  },
  "RabbitMqSettings": {
    "Host": "amqp://localhost:5672",
    "Username": "guest",
    "Password": "guest"
  },
  "SectionDataRestrictions": {
    "SectionNameMaxLength": 100,
    "SectionAboutMaxLength": 250,
    "SectionCoachNotesMaxLength": 250,
    "SectionGymNotesMaxLength": 250,
    "SectionMemberGoalMaxLength": 250,
    "MaxTagAmount": 10,
    "TagMaxLength": 50
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.json",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },

  "AllowedHosts": "*"
}
